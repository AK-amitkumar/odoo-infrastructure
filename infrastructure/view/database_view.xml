<?xml version="1.0" encoding="utf-8"?>
<!-- infrastructure.database -->
<openerp>
<data>

<!-- SEARCH VIEW -->
<record id="view_infrastructure_database_filter" model="ir.ui.view">
    <field name="name">infrastructure.database.select</field>
    <field name="model">infrastructure.database</field>
    <field name="arch" type="xml">
        <search string="database" version="7.0">
            <group string="By Attribute">
                <field name="database_type_id" string="Type"/>
                <field name="name" string="Name"/>
                <field name="partner_id" string="Partner"/>
                <field name="demo_data" string="Demo Data?"/>
            </group>
            <group string="By Object">
                <field name="instance_id" string="Instance"/>
            </group>
        </search>
    </field>
</record>

<!-- FORMVIEW -->
<record id="view_infrastructure_database_form" model="ir.ui.view">
    <field name="name">infrastructure.database.form</field>
    <field name="model">infrastructure.database</field>
    <field name="arch" type="xml">
        <form string="database" version="7.0">
            <header>
                <button name="action_wfk_set_draft"
                    type="object"
                    states="cancel"
                    string="to Draft"
                    />
                <button name="sgn_to_maintenance"
                    states="active"
                    string="to Maintenance"
                    />
                <button name="sgn_deactivate"
                    states="active"
                    string="Deactivate"
                    />
                <button name="sgn_to_active"
                    states="deactivated,draft,maintenance"
                    string="to Active"
                    class="oe_highlight"
                    />
                <button name="sgn_cancel"
                    states="active,deactivated,maintenance"
                    string="Cancel"
                    />
                <field name="state" widget="statusbar"
                    statusbar_colors='{}'
                    />
            </header>
            <sheet string="database">
                <div class="col-md-6">
                    <h2>
                        <field name="database_type_id" placeholder="Type..."/>
                        <field name="server_id" invisible="1"/>
                        <field name="instance_id" invisible="1"/>
                    </h2>
                    <h1>
                        <field name="name" placeholder="Name..."/>
                    </h1>
                    <h2>
                        <field name="partner_id" placeholder="Partner..."/>
                    </h2>
                </div>
                <div class="oe_right oe_button_box" name="buttons">
                    <button icon="fa-download" type="object" string="Backup Now" class="oe_inline oe_stat_button" name="action_backup_now" attrs="{'invisible':[('state','!=','active')]}"/>
                    <button icon="fa-download" type="object" string="Dump" class="oe_inline oe_stat_button" name="dump_db" attrs="{'invisible':[('state','!=','active')]}"/>
                    <button icon="fa-sun-o" type="object" string="Create" class="oe_inline oe_stat_button" name="create_db" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button icon="fa-copy" type="action" string="Duplicate" class="oe_stat_button" name="%(action_infrastructure_duplicate_db_wizard)d" attrs="{'invisible':[('state','!=','active')]}"/>
                    <button icon="fa-trash-o" type="object" string="Drop" class="oe_stat_button" name="drop_db" attrs="{'invisible':[('state','!=','active')]}"/>
                    <button type="object" string="Kill Connections" class="oe_stat_button" name="kill_db_connection" attrs="{'invisible':[('state','!=','active')]}"/>
                </div>
                 <group>
                    <group>
                        <field name="demo_data"/>
                        <field name="issue_date"/>
                        <field name="deactivation_date"/>
                    </group>
                    <group>
                        <label for="smtp_server_id"/>
                        <div class="oe_inline">
                            <field name="smtp_server_id" class="oe_inline"/>
                            <button class="oe_link oe_inline" type="object" name="upload_mail_server_config" attrs="{'invisible':[('smtp_server_id','=',False)]}" string="Upload Config"/>
                        </div>
                        <label for="domain_alias"/>
                        <div class="oe_inline">
                            <field name="domain_alias" class="oe_inline"/>
                            <button class="oe_link oe_inline" type="object" name="config_catchall" attrs="{'invisible':[('domain_alias','=',False)]}" string="Config Catchall"/>
                        </div>
                    </group>
                 </group>
                 <group>
                    <field name="db_backup_policy_ids" widget="many2many_tags"/>
                 </group>
                <notebook>
                    <page string="Backups" name="backup_ids">
                        <field name="backup_ids"/>
                    </page>
                    <page string="Base Modules" name="base_module_ids">
                        <button type="object" name="update_modules_data" string="Update Modules Data"/>
                        <button type="object" name="install_base_modules" string="Install Modules"/>
                        <field name="base_module_ids" context="{'database_id':active_id}">
                            <tree colors="blue:state=='to upgrade' or state=='to install';red:state=='uninstalled';grey:state=='uninstallable';black:state=='installed';orange:state=='not_available'" create="false" string="Modules">
                                <field name="shortdesc"/>
                                <field name="name" groups="base.group_no_one"/>
                                <field name="author"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Modules" name="module_ids">
                        <button type="object" name="update_modules_data" string="Update Modules Data"/>
                        <field name="module_ids"/>
                    </page>
                    <page string="Notes">
                        <field name="note"/>
                    </page>
                </notebook>
            </sheet>

            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<!-- TREEVIEW -->
<record id="view_infrastructure_database_tree" model="ir.ui.view">
    <field name="name">infrastructure.database.tree</field>
    <field name="model">infrastructure.database</field>
    <field name="arch" type="xml">
        <tree string="database"
            fonts="bold:message_unread==True"
            colors="grey:state=='cancelled';blue:state in ('draft',);black:state in ('active', 'deactivated', 'maintenance'); red:state in ()"
            >
            <field name="message_unread" invisible="1"/>
            <field name="database_type_id"/>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="demo_data"/>
            <field name="instance_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="action_infrastructure_database_databases" model="ir.actions.act_window">
    <field name="name">Databases</field>
    <field name="res_model">infrastructure.database</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_infrastructure_database_tree"/>
    <field name="search_view_id" ref="view_infrastructure_database_filter"/>
    <field name="domain">[]</field>
</record>

<menuitem
    name="Databases"
    id="menu_databases"
    sequence="40"
    action="action_infrastructure_database_databases"
    parent="menu_infra_main"
    groups="group_user"
    />

<menuitem
    name="Databases"
    id="menu_databases_conf"
    sequence="30"
    parent="menu_configuration"
    groups="group_manager"
    />

</data>
</openerp>
