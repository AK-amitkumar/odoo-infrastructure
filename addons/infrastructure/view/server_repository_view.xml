                    <field name="path" string="Path"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_infrastructure_server_repository_form" model="ir.ui.view">
            <field name="name">infrastructure.server_repository.form</field>
            <field name="model">infrastructure.server_repository</field>
            <field name="arch" type="xml">
                <form string="server_repository" version="7.0">
                    <header>
                    </header>
                    <sheet string="server_repository">
                     <group>
                        <field name="repository_id"
                            />
                        <field name="path"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_infrastructure_server_repository_tree" model="ir.ui.view">
            <field name="name">infrastructure.server_repository.tree</field>
            <field name="model">infrastructure.server_repository</field>
            <field name="arch" type="xml">
                <tree string="server_repository"
                    >
                    <field name="repository_id"
                        />
                    <field name="path"
                        />
                </tree>
            </field>
        </record>

